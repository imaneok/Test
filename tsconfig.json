{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6", "es5", "dom", "es2017"],
    "strictNullChecks": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "local_env", "dist"],
  "ts-loader": {
    "transpileOnly": true
  }
}